{
    "name": "phillarmonic/crescendo-var-bundle",
    "description": "Elevate Your Code to a Symphony of Efficiency with CrescendoVarBundle: Where Every Variable Plays its Part Perfectly.",
    "type": "symfony-bundle",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Phillarmonic\\CrescendoVarBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "src/tests"
        }
    },
    "authors": [
        {
            "name": "Phillarmonic Software",
            "email": "phillarmonicsoftware@outlook.com"
        },
        {
            "name": "AndersonPEM",
            "email": "sza.andersonsilva@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "composer/package-versions-deprecated": "^1.11",
        "symfony/console": "^6.0|^7.0",
        "symfony/dependency-injection": "^7.0",
        "symfony/framework-bundle": "^6.0|^7.0",
        "symfony/http-kernel": "^6.0|^7.0",
        "symfony/validator": "^6.0|^7.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    }
}
